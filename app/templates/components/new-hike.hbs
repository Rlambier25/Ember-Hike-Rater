<div class="container">
  {{#if addNewHike}}
    <h1>New Hike Destination</h1>
      <div>
        <form>
          <div class="form-group">
            <label for="country"> Which country?</label>
            {{input value=country id="country"}}
          </div>

          <div class="form-group">
            <label for="location">location</label>
            {{input value=location id="location"}}
          </div>

          <button class="btn btn-success"  {{action 'saveHike'}}>Save</button>
        </form>
      </div>
  {{else}}
    <button class="btn btn-success" {{action 'showHikeForm'}}>New Hike</button>
  {{/if}}
</div>
